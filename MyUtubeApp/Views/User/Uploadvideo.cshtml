@using MyUtubeApp.Models

@{
    ViewBag.Title = "Channel";

}

<h2>Channel</h2>
<br />
<br />
<div class="container">

    <div style="float:left;" id="dropdown-channel">
        <select class="btn btn-default" name="Channel">
            <option vlaue="0">Choose your channel</option>
            @foreach (var channel in (List<ChannelViewModel>)ViewBag.ChannelList)
            {
                <option value="@channel.Value">@channel.Text</option>
            }
        </select>

    </div>
    <div class="form-group">
        <div class="offset-sm-2 col-sm-10">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Channel</button>
        </div>
        @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Channel</button>*@

        <!-- Modal -->

        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">AddChannel</h4>
                    </div>

                    <div class="modal-body">
                        <form action="/User/Uploadvideo" method="post">
                            <div class="form-group row">
                                <label for="inputChannel" class="col-sm-2 col-form-label">Channel Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputChannel" name="Channelname" placeholder="Channel Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleTextarea" class="col-sm-2 col-form-label">Add Description</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" id="exampleTextarea" rows="3" name="Channeldescription" placeholder="Add Channel Description"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary" onclick="">Add</button>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>

    </div>
</div>



